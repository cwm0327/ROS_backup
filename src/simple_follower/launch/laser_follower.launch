<launch>
  <!-- 开启激光雷达跟随以及pid计算节点  -->
  <include file='$(find simple_follower)/launch/nodes/laserTracker.launch' />
  <include file='$(find simple_follower)/launch/nodes/laserfollow.launch' />
  <!-- 开启机器人底层相关节点  -->
  <include file="$(find turn_on_wheeltec_robot)/launch/turn_on_wheeltec_robot.launch" />
  <!-- turn on lidar开启思岚雷达  -->
   <!-- 思岚A1的雷达，参考官方SDK-->
  <node name="rplidarNode"          pkg="rplidar_ros"  type="rplidarNode" output="screen">
    <param name="serial_port"         type="string" value="/dev/rplidar_laser"/>
    <param name="serial_baudrate"     type="int"    value="115200"/>
    <param name="frame_id"            type="string" value="laser"/>
    <param name="inverted"            type="bool"   value="false"/>
    <param name="angle_compensate"    type="bool"   value="true"/>
    <param name="angle_start"         type="double" value="0"  />
    <param name="angle_end"           type="double" value="360"/>
  </node>
</launch>
